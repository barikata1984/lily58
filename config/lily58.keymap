#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>

/ {
    combos {
        compatible = "zmk,combos";

        COMBO_BT_CLR {
            bindings = <&bt BT_CLR>;
            key-positions = <12 53>;
            layers = <1>;
            timeout-ms = <100>;
        };

        to_utility_1 {
            bindings = <&to 1>;
            key-positions = <36 50>;
            layers = <0>;
            timeout-ms = <200>;
        };

        to_utility_2 {
            bindings = <&to 1>;
            key-positions = <57 49>;
            layers = <0>;
            timeout-ms = <200>;
        };

        to_base_1 {
            bindings = <&to 0>;
            key-positions = <36 50>;
            layers = <1>;
            timeout-ms = <200>;
        };

        to_base_2 {
            bindings = <&to 0>;
            key-positions = <57 49>;
            layers = <1>;
            timeout-ms = <200>;
        };
    };

    behaviors {
        bspc_del: bspc_del {
            compatible = "zmk,behavior-mod-morph";
            label = "BSPC_DEL";
            bindings = <&kp BACKSPACE>, <&kp DELETE>;

            #binding-cells = <0>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        base_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |  ESC  |  1  |  2  |  3   |  4   |  5   |                   |  6   |  7    |  8    |  9   |   0   |   `   |
            // |  TAB  |  Q  |  W  |  E   |  R   |  T   |                   |  Y   |  U    |  I    |  O   |   P   |   -   |
            // |  CTRL |  A  |  S  |  D   |  F   |  G   |                   |  H   |  J    |  K    |  L   |   ;   |   '   |
            // | SHIFT |  Z  |  X  |  C   |  V   |  B   |   "["  |  |  "]"  |  N   |  M    |  ,    |  .   |   /   | SHIFT |
            //                     | ALT  | GUI  | LOWER|  SPACE |  | ENTER | RAISE| BSPC  | GUI   |

            display-name = "Base";
            bindings = <
&gresc     &kp N1  &kp N2  &kp N3  &kp N4    &kp N5                                  &kp N6     &kp N7     &kp N8     &kp N9   &kp N0    &bspc_del
&kp TAB    &kp Q   &kp W   &kp E   &kp R     &kp T                                   &kp Y      &kp U      &kp I      &kp O    &kp P     &kp BACKSLASH
&kp LCTRL  &kp A   &kp S   &kp D   &kp F     &kp G                                   &kp H      &kp J      &kp K      &kp L    &kp SEMI  &mt RCTRL SINGLE_QUOTE
&kp LSHFT  &kp Z   &kp X   &kp C   &kp V     &kp B         &kp LBKT     &kp RBKT     &kp N      &kp M      &kp COMMA  &kp DOT  &kp FSLH  &kp RIGHT_SHIFT
                           &trans  &kp LGUI  &kp LEFT_ALT  &kp SPACE    &lt 1 ENTER  &kp MINUS  &kp EQUAL  &trans
            >;
        };

        utility_layer {
            // ------------------------------------------------------------------------------------------------------------
            // |       |     |     |      |      |      |                   |      |       |       |      |       |       |
            // |   `   |  1  |  2  |  3   |  4   |  5   |                   |  6   |   7   |   8   |  9   |   0   |       |
            // |   F1  |  F2 |  F3 |  F4  |  F5  |  F6  |                   |      |   <-  |   v   |  ^   |  ->   |       |
            // |   F7  |  F8 |  F9 |  F10 |  F11 |  F12 |        |  |       |  +   |   -   |   =   |  [   |   ]   |   \   |
            //                     |      |      |      |        |  |       |      |       |       |

            display-name = "Utility";
            bindings = <
&kp F1      &kp F2        &kp F3        &kp F4        &kp F5        &kp F6                                &kp F7                    &kp F8           &kp F9                &kp F10               &kp F11   &kp F12
&trans      &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &bt BT_SEL 3  &bt BT_SEL 4                          &kp K_BACK                &kp PAGE_DOWN    &kp PAGE_UP           &kp K_FORWARD         &kp HOME  &kp END
&kp LCTRL   &trans        &trans        &trans        &trans        &trans                                &kp LEFT                  &kp DOWN_ARROW   &kp UP_ARROW          &kp RIGHT             &trans    &kp RCTRL
&kp LSHIFT  &trans        &trans        &trans        &trans        &trans        &trans       &trans     &mt K_MUTE C_VOLUME_DOWN  &kp C_VOL_UP     &kp C_BRIGHTNESS_DEC  &kp C_BRIGHTNESS_INC  &trans    &kp RIGHT_SHIFT
                                        &trans        &kp LGUI      &kp LEFT_ALT  &kp SPACE    &kp ENTER  &kp C_PLAY_PAUSE          &kp PRINTSCREEN  &trans
            >;
        };
    };
};
